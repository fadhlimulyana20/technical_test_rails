
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Homepage</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  </head>
  <body>
    <div class="container-sm mt-5">
      <% if user_signed_in? %>
      <h1>Hello, <%= current_user.username %></h1>
      <%= button_to "log out", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
      <% else %>
      <h1>Hello</h1>
      <a class="btn btn-success" href="/users/sign_in">Login</a>
       <a class="btn btn-primary" href="/users/sign_up">Register</a>
      <% end %>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

      <h3>Menu</h3>
      <ul>
        <li>
          <a href="/book">Book List</a>
        </li>
        <li>
          <a href="/book/api/v1/book">Book API</a>
        </li>
       <li>
          <a href="/author/api/v1/author">Author API</a>
        </li>
      </ul>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  </body>
</html>